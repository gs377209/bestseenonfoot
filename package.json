{
  "name": "bestseenonfoot",
  "version": "15.2.0",
  "private": true,
  "engines": {
    "node": "^18",
    "npm": "^9"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build-and-start": "next build && next start",
    "lint": "next lint",
    "mdlint": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "mdlintfix": "markdownlint-cli2-fix '**/*.md' '#node_modules'",
    "typecheck": "tsc",
    "prepare": "husky",
    "e2e": "start-server-and-test build-and-start http://localhost:3000 \"cypress open --e2e\"",
    "e2e:headless": "start-server-and-test build-and-start http://localhost:3000 \"cypress run --e2e\"",
    "e2e:playwright": "playwright test",
    "component": "cypress open --component",
    "component:headless": "cypress run --component",
    "test": "jest --watch",
    "test:ci": "jest --ci --no-watch --no-watchAll",
    "test:vitest": "vitest",
    "test:vitest:ci": "vitest run",
    "preversion": "prettier --check . && npm run typecheck && npm run lint && npm run mdlint && npm run test:ci && npm run test:vitest:ci && npm run component:headless && npm run e2e:headless && npm run e2e:playwright",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && rm -rf .next"
  },
  "dependencies": {
