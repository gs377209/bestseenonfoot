{
  "name": "bestseenonfoot",
  "version": "4.7.0",
  "private": true,
  "engines": {
    "node": "^18.12.0",
    "npm": "^8.19.2"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "mdlint": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "mdlintfix": "markdownlint-cli2-fix '**/*.md' '#node_modules'",
    "typecheck": "tsc",
    "prepare": "husky install",
    "e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "e2e:playwright": "playwright test",
    "component": "cypress open --component",
    "component:headless": "cypress run --component",
    "test": "jest --watch",
    "test:ci": "jest --ci --no-watch --no-watchAll",
    "preversion": "prettier --check . && npm run typecheck && npm run lint && npm run mdlint && npm run test:ci && npm run component:headless && npm run e2e:headless && npm run e2e:playwright",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && rm -rf .next"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@vercel/analytics": "^1.0.1",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "escape-html": "^1.0.3",
    "feed": "^4.2.2",
    "fuse.js": "^6.6.2",
    "gray-matter": "^4.0.3",
    "next": "^13.4.6",
    "next-pwa": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "remark": "^14.0.3",
    "remark-html": "^15.0.2",
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/escape-html": "^1.0.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.18",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "cypress": "^12.14.0",
    "eslint": "^8.43.0",
    "eslint-config-next": "^13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-markdownlint": "^0.4.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "markdownlint-cli2": "^0.8.1",
    "postcss": "^8.4.24",
    "postcss-import": "^15.1.0",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
