{
  "name": "bestseenonfoot",
  "version": "12.0.0",
  "private": true,
  "engines": {
    "node": "^18",
    "npm": "^9"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build-and-start": "next build && next start",
    "lint": "next lint",
    "mdlint": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "mdlintfix": "markdownlint-cli2-fix '**/*.md' '#node_modules'",
    "typecheck": "tsc",
    "prepare": "husky install",
    "e2e": "start-server-and-test build-and-start http://localhost:3000 \"cypress open --e2e\"",
    "e2e:headless": "start-server-and-test build-and-start http://localhost:3000 \"cypress run --e2e\"",
    "e2e:playwright": "playwright test",
    "component": "cypress open --component",
    "component:headless": "cypress run --component",
    "test": "jest --watch",
    "test:ci": "jest --ci --no-watch --no-watchAll",
    "preversion": "prettier --check . && npm run typecheck && npm run lint && npm run mdlint && npm run test:ci && npm run e2e:playwright",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && rm -rf .next"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@next/third-parties": "^14.0.3",
    "@vercel/analytics": "^1.1.1",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "escape-html": "^1.0.3",
    "feed": "^4.2.2",
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3",
    "next": "^14.0.3",
    "next-pwa": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "sharp": "^0.33.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/escape-html": "^1.0.4",
    "@types/jest": "^29.5.10",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "cypress": "^13.6.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-markdownlint": "^0.5.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "markdownlint-cli2": "^0.11.0",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "prettier": "3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
